{
  "manifest_version": 2,
  "name": "DJI Forums Enhancer",
  "version": "0.1",
  "description": "Enhances the DJI Forums experience",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "DJI Forums Enhancer",
    "default_popup": "settings.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  }
}
