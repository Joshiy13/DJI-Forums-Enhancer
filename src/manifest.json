{
  "manifest_version": 2,
  "name": "DJI Forums Enhancer",
  "version": "0.2",
  "description": "Enhances the DJI Forums experience",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://forum.dji.com/*"],
      "js": ["scripts/distance_converter.js", "scripts/spelling_fixer.js"],
      "run_at": "document_idle"
    }
  ]
}
